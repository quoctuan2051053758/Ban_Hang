mixin product-item(item)
    //- .col-4.mb-3 
    //-     .product-item 
    //-         .inner-image 
    //-             img(
    //-                 src=item.thumbnail, 
    //-                 alt=item.title)
    //-             if(item.featured=="1")
    //-                 .inner-featured Nổi bật
    //-         .inner-content
    //-             h3.inner-title 
    //-                 a(href=`/products/detail/${item.slug}`) #{item.title}
    //-             .inner-price-new Giá mới: #{item.priceNew} Đ
    //-             .inner-price-old #{item.price}
    //-             .inner-discount -#{item.discountPercentage}%
    .col-xl-3.col-lg-3.col-md-4.col-sm-6.col-6
        .grid__wraper
            .grid__wraper__img
                .grid__wraper__img__inner
                    a(href=`/products/detail/${item.slug}`)
                        img.primary__image(src=item.thumbnail alt=item.title height="300px" weigh="300px")
                        //- img.secondary__image(src="img/grid/grid__2.png" alt="Secondary Image")
                .grid__wraper__icon
                    ul
                        li
                            span(data-bs-toggle="modal" data-bs-target="#exampleModal")
                                a.quick__view__action(href=`/products/detail/${item.slug}` data-bs-toggle="tooltip" data-bs-placement="top" title="Quick View" data-bs-original-title="Quick View")
                                    i.far.fa-eye
                        li
                            a(href=`/cart/add/${item.id}` data-bs-toggle="tooltip" data-bs-placement="top" title="Add To Cart" data-bs-original-title="Add To Cart")
                                i.fas.fa-shopping-cart
                        li
                            a(href=`/cart/add/${item.id}` data-bs-toggle="tooltip" data-bs-placement="top" title="Add To Wishlist" data-bs-original-title="Add To Wishlist")
                                i.far.fa-heart
                        li
                            a(href="#" data-bs-toggle="tooltip" data-bs-placement="top" title="Add To Compare" data-bs-original-title="Add To Compare")
                                i.fas.fa-exchange-alt
                .grid__wraper__badge
                    span.new__badge New
                    span.sale__badge -#{item.discountPercentage}%
            .grid__wraper__info
                h3.grid__wraper__tittle
                    a(href=`/products/detail/${item.slug}` tabindex="0") #{item.title}
                .grid__wraper__price
                    del #{item.price} Đ
                    span #{item.priceNew} Đ