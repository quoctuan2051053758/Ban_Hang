aside.app-sidebar.bg-body-secondary.shadow(data-bs-theme="dark")
    .sidebar-brand
        a.brand-link(href="./index.html")
            img.brand-image.opacity-75.shadow(src="/admin/assets/img/AdminLTELogo.png", alt="AdminLTE Logo")
            span.brand-text.fw-light Quản trị viên
    .sidebar-wrapper
        nav.mt-2
            ul.nav.sidebar-menu.flex-column(data-lte-toggle="treeview", role="menu", data-accordion="false")
                li.nav-item
                    a.nav-link(href=`${prefixAdmin}/dashboard`) Trang tổng quan
                
                if(role.permissions.includes("products-category_view"))
                    li.nav-item
