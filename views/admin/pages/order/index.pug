extends  ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug

include ../../mixins/sort.pug
include ../../mixins/moment.pug



block main
    +alert-success(5000)
    +alert-error(5000)
    if(role.permissions.includes("products_view"))
        
        <main class="app-main"> <!--begin::App Content Header-->
            <div class="app-content-header"> <!--begin::Container-->
                
            </div>  
            <div class="app-content"> <!--begin::Container-->
                <div class="container-fluid"> <!--begin::Row-->
                    <div class="row">
                        <div class>
                            <div class="card mb-12">
                                <div class="card-header">
                                        <h3 class="card-title">Danh sách đặt hàng</h3>
                                        .form-container.text-start.mb-3
                                            form(id="form-search" class="row col-5")
                                                .input-group
                                                    input(
                                                        type="text"
                                                        placehoder="Nhập từ khóa"
                                                        name="keyword"
                                                        class="form-control"
                                                        value=keyword
                                                    )
                                                    .input-group-append
                                                        button(
                                                            class="btn btn-success"
                                                            type="submit"
                                                        ) Tìm
    
                                </div> <!-- /.card-header -->
                                
                                <div class="card-body">
                                    <table class="table table-bordered" checkbox-multi>
                                        <thead>
                                            <tr>
                                                th STT
                                                th Sản phẩm 
                                                th Số lượng
                                                //- th Giá
                                                th Tổng giá
                                                //- th Trạng thái
                                                //- th Hành động
                                            </tr>
                                        </thead>
                                        <tbody>
                                            
                                            each order in orders
                                                tr 
                                                    td #{order.userInfo.fullName}
                                                    td    
                                                        each product in order.products
                                                            |  #{product.productInfo.title} ,
                                                    td    
                                                        each product in order.products
                                                            |  #{product.quantity} ,
                                                    td #{order.totalPrice}
                                                    
                                                
                                        </tbody>
                                    </table>
                                </div> <!-- /.card-body -->
                                <div class="card-footer clearfix">
                                    <ul class="pagination pagination-sm m-0 float-end">
                                        if pagination.currentPage > 1
                                            <li class="page-item"> <a class="page-link" button-pagination=pagination.currentPage + 1>&laquo;</a> </li>
                                        - for(let i = 1; i <= pagination.totalPage; i++)    
                                            li.page-item(class=`${pagination.currentPage == i ? "active" : ""}`)
                                                a(
                                                    class="page-link"
                                                    button-pagination=i
                                                ) #{i} 
                                            //- <li class="page-item"> <a class="page-link" href="#">2</a> </li>
                                            //- <li class="page-item"> <a class="page-link" href="#">3</a> </li>
                                        if pagination.currentPage < pagination.totalPage
                                            li.page-item
                                                a(
                                                    class="page-link"
                                                    button-pagination=pagination.currentPage + 1
                                                ) Kế tiếp     
                                            //- <li class="page-item"> <a class="page-link" href="#">&raquo;</a> </li>
                                    </ul>
                                </div>
                            </div> <!-- /.card -->
                        </div> <!-- /.col -->
                    </div> <!--end::Row-->
                </div> <!--end::Container-->
            </div>
        </main>


        //- .chatapi-windows
        script(src="/admin/js/product.js")