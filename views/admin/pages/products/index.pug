            <div class="app-content-header"> <!--begin::Container-->
                
            </div>  
            <div class="app-content"> <!--begin::Container-->
                <div class="container-fluid"> <!--begin::Row-->
                    <div class="row">
                        <div class>
                            <div class="card mb-12">
                                <div class="card-header">
                                        <h3 class="card-title">Danh sách sản phẩm</h3>
                                        .form-container.text-start.mb-3
                                            form(id="form-search" class="row col-5")
                                                .input-group
                                                    input(
                                                        type="text"
                                                        placehoder="Nhập từ khóa"
                                                        name="keyword"
                                                        class="form-control"
                                                        value=keyword
                                                    )
                                                    .input-group-append
                                                        button(
                                                            class="btn btn-success"
                                                            type="submit"
                                                        ) Tìm
    
                                </div> <!-- /.card-header -->
                                div(sort)
                                    select(
                                        name="form-control"
                                        class="form-select w-auto"
                                        sort-select
                                    ) 
                                        option(value="position-desc") Vị trí giảm dần
                                        option(value="position-asc") Vị trí tăng dần
                                        option(value="price-desc") Giá giảm dần
                                        option(value="price-asc") Giá tăng dần
                                        option(value="title-asc") Tiêu đề A-Z 
                                        option(value="title-desc") Tiêu đề Z-A
                                    button(class="btn btn-danger"
                                        sort-clear
                                    ) Clear
                                <div class="card-body">
                                    <table class="table table-bordered" checkbox-multi>
                                        <thead>
                                            <tr>
                                                th 
                                                    input(type="checkbox" name="checkall")
                                                th STT
                                                th Hình ảnh
                                                th Tiêu đề
                                                th Giá
                                                th Trạng thái
                                                //- th Người tạo
                                                //- th Người cập nhật
                                                th Hành động
                                            </tr>
                                        </thead>
                                        <tbody>
                                            each item, index in products
                                                <tr class="align-middle">
                                                    <td>
                                                        input(type="checkbox" name="id" value=item.id)
                                                    </td>
                                                    td #{pagination.limitItems*(pagination.currentPage - 1)+(index+1)}
                                                    td
                                                        img(
                                                            src=item.thumbnail
                                                            alt= item.title
                                                            height="auto"
                                                            width="100px"
                                                        )
                                                    td #{item.title}
                                                    td #{item.price}
                                                    td
                                                        if(role.permissions.includes("products_edit"))
                                                            if(item.status == "active")
                                                                a(
                                                                    href="javascript:;" 
                                                                    data-status=item.status
                                                                    data-id=item.id
                                                                    button-change-status
                                                                    class="badge badge-success"
                                                                )  Đang hoạt động
                                                            else    
                                                                a(
                                                                    href="javascript:;" 
                                                                    data-status=item.status
                                                                    data-id=item.id
                                                                    button-change-status
                                                                    class="badge badge-danger"
                                                                ) ngừng hoạt động
                                                        //- td   
                                                        //-     p #{item.accountFullName} 
                                                        //-     p 
                                                        //-         +formatDate(item.createdBy.createdAt)

                                                        //- td 
                                                        //-     - const updatedBy = item.updatedBy.slice(-1)[0]
                                                            
                                                        //-     if(updatedBy)
                                                        //-         p #{updatedBy.accountFullName}
                                                        //-         p 
                                                        //-             +formatDateTime(updatedBy.updateAt)
                                                        td
                                                            //- a(
                                                            //-     href=`${prefixAdmin}/products/detail/${item.id}` 
                                                            //-     class="btn btn-secondary btn-sm"
                                                            //- ) Chi tiết
                                                            if(role.permissions.includes("products_edit"))
                                                                a(
                                                                    href=`${prefixAdmin}/products/edit/${item.id}` 
                                                                    class="btn btn-warning btn-sm"
                                                                ) Sửa
                                                            if(role.permissions.includes("products_delete"))
                                                                button(
                                                                    class="btn btn-danger btn-sm"
                                                                    button-delete
                                                                    data-id=item.id
                                                                ) Xóa

                                                
                                        </tbody>
                                    </table>
                                </div> <!-- /.card-body -->
                                <div class="card-footer clearfix">
                                    <ul class="pagination pagination-sm m-0 float-end">
                                        if pagination.currentPage > 1
                                            <li class="page-item"> <a class="page-link" button-pagination=pagination.currentPage + 1>&laquo;</a> </li>
                                        - for(let i = 1; i <= pagination.totalPage; i++)    
                                            li.page-item(class=`${pagination.currentPage == i ? "active" : ""}`)
                                                a(
                                                    class="page-link"
                                                    button-pagination=i
                                                ) #{i} 
                                            //- <li class="page-item"> <a class="page-link" href="#">2</a> </li>
                                            //- <li class="page-item"> <a class="page-link" href="#">3</a> </li>
                                        if pagination.currentPage < pagination.totalPage
                                            li.page-item
                                                a(
                                                    class="page-link"
                                                    button-pagination=pagination.currentPage + 1
                                                ) Kế tiếp     
                                            //- <li class="page-item"> <a class="page-link" href="#">&raquo;</a> </li>
                                    </ul>
                                </div>
                            </div> <!-- /.card -->
                        </div> <!-- /.col -->
                    </div> <!--end::Row-->
                </div> <!--end::Container-->
            </div>
        </main>







