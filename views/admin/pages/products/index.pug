extends  ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
block main
    h1 Trang danh sách sản phẩm

    .card.mb-3 
        .card-header Bộ lọc và Tìm kiếm 
        .card-body
            .row
                .col-6 
                    +filter-status(filterStatus)
                .col-6 
                    +search(keyword)

    h1 Trang danh sách sản phẩm
    .card.mb-3 
        .card-header Danh sách
            .card-body 
                table.table.table-hover.table-sm
                    thead
                        tr
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Trạng thái
                        th Hành động
                    tbody
                        each item, index in products
                            tr
                                td #{index + 1}
                                td
                                    img(
                                    src=item.thumbnail
                                    alt= item.title
                                    height="auto"
                                    )
                                td #{item.title}
                                td #{item.price}
                                td
                                    if(item.status == "active")
                                        span.badge.badge-success Đang hoạt động
                                    else    
                                        span.badge.badge-danger ngừng hoạt động
                                td
                                    button.btn.btn-warning.btn-sm Chỉnh sửa
                                    button.btn.btn-danger.btn-sm Xóa
    +pagination(pagination)
                      