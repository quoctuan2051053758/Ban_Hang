extends ../../layouts/default.pug

block main

  main.app-main
  
    .app-content-header
      .container-fluid
        .row
          .col-sm-6
            h3.mb-0 Dashboard
          .col-sm-6
            ol.breadcrumb.float-sm-end
              li.breadcrumb-item
                a(href="/admin/dashboard") Home
              li.breadcrumb-item.active(aria-current="page") Dashboard

    .app-content
      .container-fluid
        .row
          .col-lg-3.col-6

            .small-box.text-bg-primary
              .inner
                h3 #{countDocuments}
                p Đơn hàng mới
              svg.small-box-icon(
                aria-hidden="true" 
                xmlns="http://www.w3.org/2000/svg" 
                viewBox="0 0 24 24" 
                fill="currentColor"
              )
                path(d="M2.25 2.25a.75.75 0 000 1.5h1.386c.17 0 .318.114.362.278l2.558 9.592a3.752 3.752 0 00-2.806 3.63c0 .414.336.75.75.75h15.75a.75.75 0 000-1.5H5.378A2.25 2.25 0 017.5 15h11.218a.75.75 0 00.674-.421 60.358 60.358 0 002.96-7.228.75.75 0 00-.525-.965A60.864 60.864 0 005.68 4.509l-.232-.867A1.875 1.875 0 003.636 2.25H2.25zM3.75 20.25a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM16.5 20.25a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0z")
              a.small-box-footer.link-light.link-underline-opacity-0.link-underline-opacity-50-hover(href="#")
                | More info
                i.bi.bi-link-45deg
           

          .col-lg-3.col-6
            .small-box.text-bg-success
              .inner
                h3
                  | #{total} Đ
                 
                p Doanh thu
              svg.small-box-icon(
                aria-hidden="true" 
                xmlns="http://www.w3.org/2000/svg" 
                viewBox="0 0 24 24" 
                fill="currentColor"
              )
                path(d="M18.375 2.25c-1.035 0-1.875.84-1.875 1.875v15.75c0 1.035.84 1.875 1.875 1.875h.75c1.035 0 1.875-.84 1.875-1.875V4.125c0-1.036-.84-1.875-1.875-1.875h-.75zM9.75 8.625c0-1.036.84-1.875 1.875-1.875h.75c1.036 0 1.875.84 1.875 1.875v11.25c0 1.035-.84 1.875-1.875 1.875h-.75a1.875 1.875 0 01-1.875-1.875V8.625zM3 13.125c0-1.036.84-1.875 1.875-1.875h.75c1.036 0 1.875.84 1.875 1.875v6.75c0 1.035-.84 1.875-1.875 1.875h-.75A1.875 1.875 0 013 19.875v-6.75z")
              a.small-box-footer.link-light.link-underline-opacity-0.link-underline-opacity-50-hover(href="#")
                | More info
                i.bi.bi-link-45deg
            

          .col-lg-3.col-6
            
            .small-box.text-bg-warning
              .inner
                h3 #{countUser}
                p Đăng ký người dùng
              svg.small-box-icon(
                aria-hidden="true" 
                xmlns="http://www.w3.org/2000/svg" 
                viewBox="0 0 24 24" 
                fill="currentColor"
              )
                path(d="M6.25 6.375a4.125 4.125 0 118.25 0 4.125 4.125 0 01-8.25 0zM3.25 19.125a7.125 7.125 0 0114.25 0v.003l-.001.119a.75.75 0 01-.363.63 13.067 13.067 0 01-6.761 1.873c-2.472 0-4.786-.684-6.76-1.873a.75.75 0 01-.364-.63l-.001-.122zM19.75 7.5a.75.75 0 00-1.5 0v2.25H16a.75.75 0 000 1.5h2.25v2.25a.75.75 0 001.5 0v-2.25H22a.75.75 0 000-1.5h-2.25V7.5z")
              a.small-box-footer.link-dark.link-underline-opacity-0.link-underline-opacity-50-hover(href="#")
                | More info
                i.bi.bi-link-45deg
            

          .col-lg-3.col-6
            
            .small-box.text-bg-danger
              .inner
                h3 65
                p Unique Visitors
              svg.small-box-icon(
                aria-hidden="true" 
                xmlns="http://www.w3.org/2000/svg" 
                viewBox="0 0 24 24" 
                fill="currentColor"
              )
                path(d="M2.25 13.5a8.25 8.25 0 018.25-8.25.75.75 0 01.75.75v6.75H18a.75.75 0 01.75.75 8.25 8.25 0 01-16.5 0z" fill-rule="evenodd" clip-rule="evenodd")
                path(d="M12.75 3a.75.75 0 01.75-.75 8.25 8.25 0 018.25 8.25.75.75 0 01-.75.75h-7.5a.75.75 0 01-.75-.75V3z" fill-rule="evenodd" clip-rule="evenodd")
              a.small-box-footer.link-light.link-underline-opacity-0.link-underline-opacity-50-hover(href="#")
                | More info
                i.bi.bi-link-45deg
           
        .row
          
          .col-lg-7.connectedSortable
            .card.mb-4
              .card-header
                h3.card-title Sales Value
              .card-body
                #revenue-chart
          .col-lg-5.connectedSortable
            .card.text-white.bg-primary.bg-gradient.border-primary.mb-4
              .card-header.border-0
                h3.card-title Sales Value
                .card-tools
                  button.btn.btn-primary.btn-sm(data-lte-toggle="card-collapse" type="button")
                    i.bi.bi-plus-lg(data-lte-icon="expand")
                    i.bi.bi-dash-lg(data-lte-icon="collapse")
              .card-body
                #world-map(style="height: 220px")
              .card-footer.border-0
                .row
                  .col-4.text-center
                    #sparkline-1.text-dark
                    .text-white Visitors
                  .col-4.text-center
                    #sparkline-2.text-dark
                    .text-white Online
                  .col-4.text-center
                    #sparkline-3.text-dark
                    .text-white Sales

    

  




